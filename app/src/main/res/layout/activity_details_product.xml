<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softrasol.ternaksukses.DetailsProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:background="@drawable/top_flat_gradeint_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            >
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_back"
                android:layout_centerVertical="true"
                android:onClick="BackClick"
                />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cart"
                android:padding="8dp"
                android:background="@drawable/circle_white_bg"
                android:layout_alignParentEnd="true"
                />


        </RelativeLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:id="@+id/cardview_slider"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_favourite"
            android:elevation="1dp"
            android:layout_margin="16dp"
            />

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#6E38CE"
            app:sliderIndicatorUnselectedColor="#FFFFFF"
            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="true" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="180dp"
        android:background="@drawable/top_round_white_bg"
        android:padding="16dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Rayban Sun Glasses"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/text_Color"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="An amazing and convenient Android image slider. ... If you get any problems when using this library or you have an internship opportunity, please feel free to ..."
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="$175.75"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#FF4893"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_Color"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="About The Seller"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/text_Color"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="John Jhonson"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Bital Kota "
                    android:textAlignment="center"
                    android:textSize="14sp" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="16dp"
                    android:padding="4dp"
                    android:paddingBottom="8dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/profile_image"
                        android:elevation="1dp"
                        app:civ_border_color="@android:color/white"
                        app:civ_border_width="2dp"
                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:orientation="vertical"
                        android:background="@drawable/login_round_white_bg"
                        android:padding="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="28dp"
                        >
                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:map="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:context="com.softrasol.ternaksukses.DetailsProductActivity" />


                    </FrameLayout>

                    <Button
                        android:layout_width="160dp"
                        android:layout_height="42dp"
                        android:visibility="visible"
                        android:textAllCaps="false"
                        android:text="Chat With Seller"
                        android:textColor="@android:color/white"
                        android:id="@+id/btn_auth_login"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/btn_login"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_marginBottom="24dp"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:text="Comments (20)"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/text_Color"
                        android:textSize="16sp"
                        />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />


                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/comments_bg"
                    android:hint="Write comment here..."
                    android:padding="10dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/recyclerview_details_product_comments"
                    />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>
