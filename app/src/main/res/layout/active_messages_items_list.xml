<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/layout_profile_img"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/profile_image"
                android:id="@+id/img_messages_profile"
                />

            <ImageButton
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/active_status_circle_green"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/layout_profile_img"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="64dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_Color"
                android:text="Martin Paimer"
                android:fontFamily="@font/radomir_tinkov_gilroy_bold"
                android:textSize="16sp"
                android:id="@+id/txt_messages_profile_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greyColor"
                android:text="Thank you for your help"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                android:id="@+id/txt_messages_description"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greyColor"
                android:text="11:33"
                android:layout_marginTop="8dp"
                android:textSize="11sp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/radomir_tinkov_gilroy_light"
                android:id="@+id/txt_messages_time"
                />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textColor="@android:color/white"
                android:text="1"
                android:layout_marginTop="8dp"
                android:textSize="11sp"
                android:padding="2dp"
                android:textAlignment="center"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                android:layout_marginEnd="16dp"
                android:background="@drawable/gradient_cicle_primary"
                android:id="@+id/txt_messages_numbers"
                />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>