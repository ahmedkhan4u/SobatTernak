<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.softrasol.ternaksukses.ProfileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/profile_top_round_bg"
        android:padding="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_back"
                android:layout_centerVertical="true"
                android:onClick="BackClick"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_white_bg"
                android:src="@drawable/ic_message"
                android:padding="10dp"
                android:layout_alignParentEnd="true"

                />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/layout_profile"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_image"
            app:civ_border_width="2.5dp"
            app:civ_border_color="#00BCD4"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/profile_image_circle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_camers"
            android:padding="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:id="@+id/img_profile"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/layout_profile"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arial Winter"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:fontFamily="@font/radomir_tinkov_gilroy_black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Graphic Designer and Developer"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/greyColor"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        />

                    <ImageButton
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/ic_edit"
                        android:layout_marginStart="16dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_Color"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="8dp"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    >

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/layout_phone"
                        android:layout_centerVertical="true"
                        android:background="@drawable/profile_items_circle_bg"
                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/profile_circle_icons_bg"
                            android:layout_margin="4dp"
                            android:src="@drawable/ic_phone"
                            android:padding="16dp"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/layout_phone"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="50dp"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_Color"
                            android:text="Mobile Number"
                            android:fontFamily="@font/radomir_tinkov_gilroy_black"
                            android:textSize="17sp"
                            android:id="@+id/txt_home_post_profile_name"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123-456-789"
                            android:layout_marginTop="8dp"
                            android:textSize="13sp"
                            android:textColor="@color/greyColor"
                            android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                            android:id="@+id/txt_home_post_time"
                            />

                    </LinearLayout>

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_edit"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/btn_home_post_menu_dots"
                        />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    >

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/layout_email"
                        android:layout_centerVertical="true"
                        android:background="@drawable/profile_items_circle_bg"
                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/profile_circle_icons_bg"
                            android:layout_margin="4dp"
                            android:src="@drawable/ic_email"
                            android:padding="16dp"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/layout_email"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="50dp"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_Color"
                            android:text="Email"
                            android:fontFamily="@font/radomir_tinkov_gilroy_black"
                            android:textSize="17sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="arialwinter123@gmail.com"
                            android:layout_marginTop="8dp"
                            android:textSize="13sp"
                            android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                            android:textColor="@color/greyColor"
                            />

                    </LinearLayout>

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_edit"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    >

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/layout_address"
                        android:layout_centerVertical="true"
                        android:background="@drawable/profile_items_circle_bg"
                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/profile_circle_icons_bg"
                            android:layout_margin="4dp"
                            android:src="@drawable/ic_address"
                            android:padding="16dp"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/layout_address"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="50dp"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_Color"
                            android:text="Address"
                            android:textSize="17sp"
                            android:fontFamily="@font/radomir_tinkov_gilroy_black"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avenue, 2nd street, In "
                            android:layout_marginTop="8dp"
                            android:textSize="13sp"
                            android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                            android:textColor="@color/greyColor"
                            />

                    </LinearLayout>

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_edit"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    >

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/layout_date"
                        android:layout_centerVertical="true"
                        android:background="@drawable/profile_items_circle_bg"
                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/profile_circle_icons_bg"
                            android:layout_margin="4dp"
                            android:src="@drawable/ic_date"
                            android:padding="16dp"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/layout_date"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="50dp"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_Color"
                            android:text="Date Of Birth"
                            android:textSize="17sp"
                            android:fontFamily="@font/radomir_tinkov_gilroy_black"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avenue, 2nd street, In "
                            android:layout_marginTop="8dp"
                            android:textSize="13sp"
                            android:textColor="@color/greyColor"
                            android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                            />

                    </LinearLayout>

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_edit"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_Color"
                    android:layout_marginTop="16dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    >

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/layout_logout"
                        android:layout_centerVertical="true"
                        android:background="@drawable/profile_items_circle_bg"
                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/profile_circle_icons_bg"
                            android:layout_margin="4dp"
                            android:src="@drawable/ic_about_us"
                            android:padding="16dp"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/layout_logout"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="50dp"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_Color"
                            android:text="About Us"
                            android:fontFamily="@font/radomir_tinkov_gilroy_black"
                            android:textSize="17sp"
                            />

                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    >

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/layout_about_us"
                        android:layout_centerVertical="true"
                        android:background="@drawable/profile_items_circle_bg"
                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/profile_circle_icons_bg"
                            android:layout_margin="4dp"
                            android:src="@drawable/ic_log_out"
                            android:padding="16dp"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/layout_about_us"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="50dp"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_Color"
                            android:text="Logout"
                            android:fontFamily="@font/radomir_tinkov_gilroy_black"
                            android:textSize="17sp"
                            />

                    </LinearLayout>

                </RelativeLayout>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>
